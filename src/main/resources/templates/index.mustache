<!-- bring another file to this file-->
{{>layout/header}}

<h1>Web Service With Spring Boot V2</h1>
<div class="col-md-12">
    <div class="col-md-6">
        <a href="/posts/save" role="button"
            class="btn btn-primary">Write Post</a>
    </div>
    <br>

    <!--List of posts-->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>Post Number</th>
            <th>Title</th>
            <th>Author</th>
            <th>Last Updated</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}      <!--Loops through posts-->
            <tr>
                <td>{{id}}</td>     <!--use the fields from posts-->
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>

</div>

{{>layout/footer}}